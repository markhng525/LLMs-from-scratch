{
  "name": "DGX PyTorch",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "runArgs": [
    "--gpus=all",
    "--shm-size=16g",
    "--ulimit",
    "memlock=-1",
    "--ulimit",
    "stack=67108864",
    "--ipc=host",
    "--runtime=nvidia",
    "--gpus=all",
    "--device=/dev/nvidia0",
    "--device=/dev/nvidia-uvm",
    "--device=/dev/nvidia-uvm-tools",
    "--device=/dev/nvidiactl",
    "--device=/dev/nvidia-modeset"
  ],
  "remoteUser": "root",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "type=volume,source=uv-cache,target=/root/.cache/uv",
    "source=${localEnv:HOME}/.gitconfig,target=/root/.gitconfig,type=bind,consistency=cached"
  ],
  "containerEnv": {
    "NVIDIA_VISIBLE_DEVICES": "all",
    "NVIDIA_DRIVER_CAPABILITIES": "compute,utility",
    "UV_PROJECT_ENVIRONMENT": ".venv.linux-aarch64"
  },
  "workspaceFolder": "/workspace",
  "postCreateCommand": "uv venv --system-site-packages && uv sync --frozen --group lint",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "meta.pyrefly",
        "yzhang.markdown-all-in-one",
        "davidanson.vscode-markdownlint"
      ],
      "settings": {
        "python.defaultInterpreterPath": "./.venv.linux-aarch64/bin/python",
        "python.analysis.typeCheckingMode": "off",
        "python.analysis.autoImportCompletions": false,
        "python.pyrefly.displayTypeErrors": "force-on",
        "python.pyrefly.disableLanguageServices": false
      }
    }
  }
}
